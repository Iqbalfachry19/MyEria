generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
    // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Karyawan {
  id      Int      @id @default(autoincrement())
  nik     String   @unique
  nama    String
department String
username String
password String
hp String
alamat String
absensi Absensi[]
 
}

model Absensi {
  id         Int      @id @default(autoincrement())
  jamMasuk  DateTime @db.Time
  jamKeluar DateTime @db.Time
  karyawan   Karyawan @relation(fields: [idKaryawan], references: [id], onDelete: Cascade, onUpdate: Cascade)
  idKaryawan Int      
  isiAbsensi IsiAbsensi[]
  bulan DateTime @default(now())
}

model IsiAbsensi {
    id      Int      @id @default(autoincrement())
    absensi   Absensi @relation(fields: [idAbsensi], references: [id])
  idAbsensi Int     
pukul String
lokasi String
tanggal String
status String 

}