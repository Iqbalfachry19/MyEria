generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Karyawan {
  id      Int      @id @default(autoincrement())
  nik     String   @unique
  nama    String
  absensi Absensi?
 jabatan String
}

model Absensi {
  id         Int      @id @default(autoincrement())
  karyawan   Karyawan @relation(fields: [idKaryawan], references: [id])
  idKaryawan Int      @unique
  jamMasuk  DateTime @default(now())
  jamKeluar DateTime 
  Laporan Laporan[]
}

model Laporan {
    id      Int      @id @default(autoincrement())
    absensi   Absensi @relation(fields: [idAbsensi], references: [id])
  idAbsensi Int      @unique
}